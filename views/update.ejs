<!DOCTYPE html>
<html lang="en">
<!--Head-->
<%- include('./partials/head.ejs') %>
<body>
  <!--Navigation-->
  <%- include('./partials/nav.ejs') %>
    <div class="container-fluid">
        <div class="col text-center py-3">
          <h1>UPDATE</h1>
        </div>
        <div class="row g-6">
          <div class="col-6 offset-3 border-secondary shadow py-3 px-5 rounded">
            <form class="form_container" method="post" action="/movie/edit-movie/<%=id%>?_method=PUT" enctype="application/x-www-form-urlencoded">
              <div class="form-group mb-1">
                <label for="colFormLabel" class="form-label"></label>
                <div class="form-group mb-1">
                  <input type="hidden" class="form-control" id="id"  placeholder="id"  name="id" value="<%=id%>">
                </div>
              </div>
              <div class="form-group mb-1">
                <label for="colFormLabel" class="form-label"></label>
                <div class="">
                  <input type="text" class="form-control" id="title" value="<%=movie.tittle%>" name="tittle">
                </div>
              </div>
              <div class="form-group mb-1">
                <label for="colFormLabel" class="form-label"></label>
                <div class="">
                  <input type="text" class="form-control" id="colFormLabel" value="<%=movie.price%>" name="price">
                </div>
              </div>
              <div class="form-group mb-1">
                <label for="colFormLabel" class="form-label"></label>
                <div class="">
                  <input type="text" class="form-control" id="description" value="<%=movie.description%>" name="description">
                </div>
              </div>
              <div class="form-group mb-1">
                <label for="colFormLabel" class="form-label"></label>
                <div class="">
                  <input type="text" class="form-control" id="image" value="<%=movie.image%>" name="image">
                </div>
              </div>
              <div class="form-group mb-3">
                <div class="text-center">
                  <input type="submit" class="btn btn-primary my-3" id="submit" value="UPDATE" >
                </div>
              </div>
            </form>
          </div>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>
</html>